{
    "version": 2,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "headers": [
        {
            "source": "/api/send",
            "headers": [
                { "key": "access-control-allow-origin", "value": "*" },
                { "key": "Access-Control-Allow-Headers", "value": "Accept, Content-Type" }
            ]
        }
    ]
}